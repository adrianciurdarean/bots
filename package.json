{
  "name": "@tradle/bots",
  "version": "1.0.0",
  "main": "./lib/bot.js",
  "bin": "./cmd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tradle/bots"
  },
  "license": "MIT",
  "dependencies": {
    "backoff": "^2.5.0",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "co-express": "mvayngrib/co-express#no-co",
    "debug": "^2.6.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "ip": "^1.1.4",
    "lowdb": "^0.14.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "queuey": "~1.5.1",
    "safe-json-stringify": "^1.0.3",
    "superagent": "^3.4.1",
    "xtend": "^4.0.1"
  },
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@tradle/models": "https://github.com/tradle/models",
    "eslint": "^3.15.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.1",
    "eslint-plugin-standard": "2.0.1",
    "tape": "^4.6.3"
  },
  "optionalDependencies": {
    "segfault-handler": "^1.0.0"
  },
  "scripts": {
    "test": "tap `git ls-files test/*.js`",
    "lint": "eslint --quiet .",
    "start": "DEBUG=tradle* ./cmd.js",
    "debug": "DEBUG=tradle* node --debug --inspect ./cmd.js",
    "debug-brk": "DEBUG=tradle* node --debug-brk --inspect ./cmd.js",
    "warn:docker": "echo '\\033[0;31mIF THIS TAKES MORE THAN A FEW SECONDS, DOCKER IS NOT RUNNING\\033[0m'",
    "createvolumes": "docker volume create --name server-conf && docker volume create --name server-storage",
    "tradle-compose": "docker-compose -f ./tradle-server-compose.yml",
    "update": "npm run tradle-compose -- pull",
    "up": "npm run tradle-compose -- up -d",
    "server:stop": "npm run tradle-compose -- stop",
    "server": "npm run createvolumes && npm run update && npm run up",
    "server-console": "docker attach tradle-server",
    "echo": "npm run start -- --conf ./conf/echo.json",
    "silly": "npm run start -- --conf ./conf/silly.json",
    "products": "npm run start -- --conf ./conf/products.json"
  }
}
